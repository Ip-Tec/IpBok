generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_fkey")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_fkey")
}

model User {
  id                   String             @id @default(cuid())
  name                 String?
  email                String?            @unique
  emailVerified        DateTime?
  password             String?
  role                 Role               @default(AGENT)
  image                String?
  transactionsPerPage  Int                @default(10)
  accounts             Account[]
  cashAdvancesGiven    CashAdvance[]      @relation("CashAdvanceGiver")
  cashAdvancesReceived CashAdvance[]      @relation("CashAdvanceReceiver")
  heldAccounts         FinancialAccount[] @relation("AccountHolder")
  memberships          Membership[]
  notifications        Notification[]
  requestsApproved     Request[]          @relation("Approver")
  requestsSent         Request[]          @relation("Requester")
  sessions             Session[]
  receivedTransactions Transaction[]      @relation("ReceivedTransactions")
  transactions         Transaction[]      @relation("RecordedTransactions")
  retailSales          RetailSale[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Notification {
  id        String   @id @default(cuid())
  message   String
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Notification_userId_fkey")
}

model Business {
  id                 String             @id @default(cuid())
  name               String
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  address            String?
  phone              String?
  type               BusinessType?
  planId             String?
  subscriptionEndsAt DateTime?
  subscriptionStatus SubscriptionStatus @default(TRIAL)
  trialEndsAt        DateTime?
  plan               PricingPlan?       @relation(fields: [planId], references: [id])
  cashAdvances       CashAdvance[]
  dailySummaries     DailySummary[]
  accounts           FinancialAccount[]
  memberships        Membership[]
  requests           Request[]
  retailCategories   RetailCategory[]
  retailProducts     RetailProduct[]
  retailSales        RetailSale[]
  transactions       Transaction[]

  @@index([planId], map: "Business_planId_fkey")
}

model PricingPlan {
  id           String       @id @default(cuid())
  businessType BusinessType @unique
  monthlyPrice Float        @default(0)
  trialDays    Int          @default(30)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  businesses   Business[]
}

model Membership {
  id         String   @id @default(cuid())
  userId     String
  businessId String
  role       Role
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, businessId])
  @@index([businessId], map: "Membership_businessId_fkey")
}

model FinancialAccount {
  id           String        @id @default(cuid())
  name         String
  type         AccountType
  balance      Float         @default(0)
  businessId   String
  holderId     String?
  business     Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  holder       User?         @relation("AccountHolder", fields: [holderId], references: [id])
  transactions Transaction[]

  @@index([businessId], map: "FinancialAccount_businessId_fkey")
  @@index([holderId], map: "FinancialAccount_holderId_fkey")
}

model TransactionType {
  id           String        @id @default(cuid())
  name         String        @unique
  transactions Transaction[]
}

model Transaction {
  id            String            @id @default(cuid())
  amount        Float
  typeId        String
  paymentMethod PaymentMethod
  recordedById  String
  businessId    String
  accountId     String?
  date          DateTime          @default(now())
  description   String?
  createdAt     DateTime          @default(now())
  recipientId   String?
  status        TransactionStatus @default(PENDING)
  category      String?
  account       FinancialAccount? @relation(fields: [accountId], references: [id])
  business      Business          @relation(fields: [businessId], references: [id])
  recipient     User?             @relation("ReceivedTransactions", fields: [recipientId], references: [id])
  recordedBy    User              @relation("RecordedTransactions", fields: [recordedById], references: [id])
  type          TransactionType   @relation(fields: [typeId], references: [id])

  @@index([accountId], map: "Transaction_accountId_fkey")
  @@index([businessId], map: "Transaction_businessId_fkey")
  @@index([recipientId], map: "Transaction_recipientId_fkey")
  @@index([recordedById], map: "Transaction_recordedById_fkey")
  @@index([typeId], map: "Transaction_typeId_fkey")
}

model DailySummary {
  id               String   @id @default(cuid())
  businessId       String
  date             DateTime @db.Date
  openingBalance   Float
  totalDeposits    Float    @default(0)
  totalWithdrawals Float    @default(0)
  totalExpenses    Float    @default(0)
  totalCharges     Float    @default(0)
  closingBalance   Float
  reconciled       Boolean  @default(false)
  createdAt        DateTime @default(now())
  business         Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([businessId, date])
}

model CashAdvance {
  id           String            @id @default(cuid())
  amount       Float
  description  String?
  status       CashAdvanceStatus @default(PENDING)
  businessId   String
  givenById    String
  receivedById String
  date         DateTime          @default(now())
  confirmedAt  DateTime?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  business     Business          @relation(fields: [businessId], references: [id], onDelete: Cascade)
  givenBy      User              @relation("CashAdvanceGiver", fields: [givenById], references: [id])
  receivedBy   User              @relation("CashAdvanceReceiver", fields: [receivedById], references: [id])

  @@index([businessId], map: "CashAdvance_businessId_fkey")
  @@index([givenById], map: "CashAdvance_givenById_fkey")
  @@index([receivedById], map: "CashAdvance_receivedById_fkey")
}

model Request {
  id          String        @id @default(cuid())
  amount      Float
  type        RequestType
  status      RequestStatus @default(PENDING)
  description String?
  requesterId String
  approverId  String?
  businessId  String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  approver    User?         @relation("Approver", fields: [approverId], references: [id])
  business    Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  requester   User          @relation("Requester", fields: [requesterId], references: [id])

  @@index([approverId], map: "Request_approverId_fkey")
  @@index([businessId], map: "Request_businessId_fkey")
  @@index([requesterId], map: "Request_requesterId_fkey")
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  userId    String?
  details   Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model GatewayTransaction {
  id               String                   @id @default(cuid())
  reference        String                   @unique
  amount           Int
  currency         String?                  @default("NGN")
  product          String
  source           String
  purpose          String
  status           GatewayTransactionStatus @default(PENDING)
  authorizationUrl String?
  paystackResponse Json?
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  paidAt           DateTime?

  @@index([reference])
  @@index([status])
}

model RetailProduct {
  id            String          @id @default(cuid())
  name          String
  description   String?         @db.Text
  sku           String?         @unique
  costPrice     Float           @default(0)
  sellingPrice  Float?
  minPrice      Float?
  maxPrice      Float?
  stockQuantity Int             @default(0)
  businessId    String
  categoryId    String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  business      Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  category      RetailCategory? @relation(fields: [categoryId], references: [id])
  sales         RetailSale[]

  @@index([businessId])
  @@index([categoryId])
}

model RetailCategory {
  id         String          @id @default(cuid())
  name       String
  businessId String
  business   Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  products   RetailProduct[]

  @@unique([businessId, name])
  @@index([businessId])
}

model RetailSale {
  id          String        @id @default(cuid())
  productId   String
  quantity    Int
  price       Float
  totalAmount Float
  profit      Float
  businessId  String
  date        DateTime      @default(now())
  business    Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  product     RetailProduct @relation(fields: [productId], references: [id])
  recordedById String
  recordedBy   User          @relation(fields: [recordedById], references: [id])

  @@index([businessId])
  @@index([productId])
  @@index([date])
  @@index([recordedById])
}

enum GatewayTransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum Role {
  OWNER
  AGENT
  MANAGER
  ACCOUNTANT
  AUDITOR
  FINANCE_OFFICER
  SUPERADMIN
  SUPPORT
  CASHIER
}

enum BusinessType {
  POS
  RETAIL
  CORPORATE
  PERSONAL
  SME
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  EXPIRED
  PAUSED
}

enum AccountType {
  CASH
  BANK
}

enum PaymentMethod {
  ATM_CARD
  BANK
  BANK_TRANSFER
  CASH
  MOBILE_MONEY
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum CashAdvanceStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum RequestType {
  CASH_ADVANCE
  EXPENSE_REIMBURSEMENT
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}
